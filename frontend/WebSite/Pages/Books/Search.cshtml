@page
@model SearchModel
@{
    ViewData["Title"] = "Search Books";
}

<h1>Search Books</h1>

<form method="post">
    <input type="text" asp-for="Query" placeholder="Enter book name or ID" />
    <button type="submit">Search</button>
</form>

@if (Model.Books.Any())
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                </tr>
            }
        </tbody>
    </table>
}
